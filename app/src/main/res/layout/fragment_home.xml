<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbarSize="0in">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SearchView
            android:id="@+id/idSearch"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="8pt"
            android:layout_marginRight="29pt"
            android:background="@drawable/shape_search"
            android:iconifiedByDefault="false"
            android:queryBackground="@android:color/transparent"
            android:queryHint="Here to search continent"
            android:scrollbars="none"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Continent:"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:layout_marginStart="20dp"/>

        <ImageButton
            android:id="@+id/btSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="148pt"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:paddingLeft="18pt"
            android:paddingBottom="18pt"
            android:background="@drawable/sort"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:listSelector="@android:color/transparent"
            tools:listitem="@layout/item1"/>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</ScrollView>